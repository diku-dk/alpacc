# Arithmetic with variables, signed integers, addition, subtraction,
# multiplication, division, and parentheses.
#
# Compile with:
#
#   alpacc futhark --lookback 1 --lookahead 1 grammars/arithmetic.alp

num = \-?[0-9]+;
var = [a-z]+;
ignore = \s|\n|\t|\r;

E0 = E1 E0';
E0' = "+" E1 E0'
    | "-" E1 E0'
    | ;
E1 = E2 E1';
E1' = "*" E2 E1'
    | "/" E2 E1'
    | ;
E2 = "(" E0 ")"
   | num
   | var;
